@model ProductoraCelis.Models.Proveedor;
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/Registrar.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />



<div>
    <div class ="col-sm-8 offset-sm-2">
        <h2>Editar Proveedores</h2>
        <form asp-controller="Admin" asp-action="Editar_Proveedor" method="post">
            <input asp-for="IdProveedor" type="hidden" />
            <div>
                <label>Nombres</label>
                <input class="form-control" asp-for="Nombres"  required />
            </div>
            <div>
                <label>Apellidos</label>
                <input class="form-control" asp-for="Apellidos"  required />
            </div>
            <div>
                <label>Dni</label>
                <input class="form-control" asp-for="Dni" required />
            </div>
            <div>
                <label>Celular</label>
                <input class="form-control" asp-for="Celular" required />
            </div>
            <div>
                <label>Direccion</label>
                <input class="form-control" asp-for="Direccion" required />
            </div>
            <div>
                <label>Fecha de Registro</label>
                <input class="form-control" asp-for="FechaRegistro" type="date" required />
            </div>

            <div>
                <label>Desccripcion</label>
                <input class="form-control" asp-for="Descripcion" required />
            </div>
            <div>
                <label>Tipo</label>
                <input class="form-control" asp-for="Tipo" required />
            </div>
            <div>
                <input asp-for="Estado" type="checkbox" id="chkActivo" />
                <label>Activo</label>
            </div>
            <div>
                <label>Email</label>
                <input class="form-control" asp-for="Email" required />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-controller="Admin" asp-action="Dashboard" asp-route-tab="proveedores" class="btn-volver">Volver</a>

            </div>
        </form>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


