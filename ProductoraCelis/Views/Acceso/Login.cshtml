@model ProductoraCelis.ViewsModes.LoginVM;
@{Layout= null;}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>LOGIN</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
</head>
<body>
    <div class="row mt-5 justify-content-center">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    Iniciar Sesion
                </div>
                <div class="card-body">
                    <form asp-controller="Acceso" asp-action="Login" method="post">

                        <input class="form-control mb-3" type="text"
                               placeholder="Correo" required asp-for="Email" />
                        <input class="form-control mb-3" type="password"
                               placeholder="Contraseña" required asp-for="Password" />
                            <button class="btn btn-warning">Iniciar Sesion</button>
                        <div>
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                        </div>
                        ¿No tienes una cuenta? <a asp-controller="Acceso" asp-action="Registrarse">Registrate</a>
                       
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
