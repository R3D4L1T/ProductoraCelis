@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProductoraCelis</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/css/Carrucel.css">
    <link rel="stylesheet" href="~/css/Header.css" />
    <link rel="stylesheet" href="~/css/Footer.css" />
    <link rel="stylesheet" href="~/css/MejoresProductos.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
</head>
<body>
        <!-- Header simplificado -->
    <header class="header">
        <img src="~/src/icon/franja.jpg" alt="Franja decorativa" class="franja" />

        <nav class="navbar navbar-expand-md navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/src/icon/logo.png" alt="Logo" class="me-2" height="30">
                    <span>Productora Celis</span>
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home fa-fw me-1"></i> Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Productos">
                                Nuestros Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Salir">
                                Salir
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>
    <div class="carousel">
        <div class="list">

            <div class="item" style="background-image:url('@Url.Content("~/src/afiches/afiche2.jpeg")');">
            </div>
            <div class="item" style="background-image:url('@Url.Content("~/src/afiches/afiche3.jpeg")');">
            </div>
            <div class="item" style="background-image:url('@Url.Content("~/src/afiches/afiche4.jpeg")');">
            </div>
            <div class="item" style="background-image:url('@Url.Content("~/src/afiches/afiche5.jpeg")');">
            </div>
            <div class="item" style="background-image:url('@Url.Content("~/src/afiches/afiche1.jpeg")');">
            </div>
            <div class="item" style="background-image: url('@Url.Content("~/src/afiches/afiche2.jpeg")');">
            </div>
            <div class="item" style="background-image: url('@Url.Content("~/src/afiches/afiche3.jpeg")');">
            </div>
            <div class="item" style="background-image:url('@Url.Content("~/src/afiches/afiche4.jpeg")');">
            </div>
            <div class="item" style="background-image: url('@Url.Content("~/src/afiches/afiche5.jpeg")');">
            </div>
            <div class="item" style="background-image:url('@Url.Content("~/src/afiches/afiche1.jpeg")');">
            </div>
            <div class="item" style="background-image:url('@Url.Content("~/src/afiches/afiche2.jpeg")');">
            </div>
        </div>
        <!--next prev button-->
        <div class="arrows">
            <button class="prev"><</button>
            <button class="next">></button>
        </div>
        <!-- time running -->
        <div class="timeRunning"></div>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="footer-content">
                <span>&copy; 2024 - ProductoraCelis</span>
                <a asp-area="" asp-controller="Home" asp-action="Contactanos">Contactanos</a>
                <a asp-area="" asp-controller="" asp-action="Nosostos">Nosotros</a>
                <a asp-area="" asp-controller="Home" asp-action="Terminos y Condiciones">Terminos y Condiciones</a>
                <h4>Síguenos en nuestras redes sociales: </h4>
                <div class="redes-sociales">
                    <a href="https://www.facebook.com/profile.php?id=100063690031482&mibextid=ZbWKwL/" target="_blank">
                        <i class="bi bi-facebook"></i> Facebook
                    </a>
                    <a href="mailto:Khamyps.sac@gmail.com" target="_blank">
                        <i class="bi bi-envelope"></i> Email
                    </a>
                    <a href="https://wa.me/+51965483988" target="_blank">
                        <i class="bi bi-whatsapp"></i> WhatsApp
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <
    <script src="~/js/Header.js"></script>
    <script src="~/js/Carrucel.js"></script>
    <script src="~/js/MejoresProductos.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Bootstrap JS (opcional si ya lo tienes con los archivos locales) -->
